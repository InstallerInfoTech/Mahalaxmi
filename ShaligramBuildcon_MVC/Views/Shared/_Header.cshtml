@{
    ViewBag.Title = "_Header";
}
<div class="navbar navbar-inverse bg-indigo">
    <div class="navbar-header">
        <a class="navbar-brand" href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/img/logo.svg")" alt=""></a>
        <ul class="nav navbar-nav pull-right visible-xs-block">
            <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
        </ul>
    </div>
    <div class="navbar-collapse collapse" id="navbar-mobile">
        <ul class="nav navbar-nav">
        </ul>

        <ul class="nav navbar-nav navbar-right">
            @if (SessionHelper.IsSuperAdmin)
            {
                <li class="dropdown" id="messagesUlList">

                </li>
            }
            <li class="dropdown dropdown-user">
                <a class="dropdown-toggle legitRipple" data-toggle="dropdown">
                    <span class="btn bg-green-800 btn-rounded btn-icon btn-xs legitRipple">@SessionHelper.EmployeeUserName</span>
                    <span>@SessionHelper.EmployeeName</span>
                    <i class="caret"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li><a onclick="OpenChangePasswordWindow();"><i class="icon-cog5"></i> Change Password</a></li>
                    <li><a href="@Url.Action("Logout","Login")"><i class="icon-switch2"></i> Logout</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>

